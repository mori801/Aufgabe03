<?xml version="1.0"?>
<project name="Ant" default="docs" basedir=".">
    <property name="src.dir" location="exercise" />
    <property name="build.dir" location="build" />
    <property name="docs.dir" location="docs" />

    <!-- LÃ¶scht vorhandene Ordner -->
    <target name="clean">
        <delete dir="${build.dir}" />
        <delete dir="${docs.dir}" />
    </target>

    <!-- Erzeugt Ordnerstruktur -->
    <target name="makedir">
        <mkdir dir="${build.dir}" />
        <mkdir dir="${docs.dir}" />
    </target>

    <!-- Kompiliert Quellcode -->
    <target name="compile" depends="clean, makedir">
        <javac srcdir="${src.dir}" destdir="${build.dir}" includeantruntime="false" />
    </target>

    <!-- Erzeugt Javadoc -->
    <target name="docs" depends="compile">
        <javadoc packagenames="exercise.*" sourcepath="${src.dir}" destdir="${docs.dir}">
            <fileset dir="${src.dir}">
                <include name="**" />
            </fileset>
        </javadoc>
    </target>
</project>